@page
@model ManagementSystem.Web.Pages.HumanResource.Complaint.DetailsModel

@{
    ViewData["Title"] = "Details";
}

@section Styles
    {
    <style>
        body {
            padding-top: 4em;
        }
    </style>
}

    <div class="container-fluid">
        <h2>Details</h2>

        <div>
            <h4>Complaint</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Complaint.Subject)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Complaint.Subject)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Complaint.Content)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Complaint.Content)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Complaint.IsReviewed)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Complaint.IsReviewed)
                </dd>

                @{ 
                    if (Model.Complaint.IsAnonymous)
                    {
                        <dt>
                           @Html.DisplayNameFor(model => model.Complaint.IsAnonymous)
                        </dt>
                    }
                    else
                    { 
                        <dt>
                            @Html.DisplayNameFor(model => model.Complaint.ApplicationUser)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Complaint.ApplicationUser.Id)
                        </dd>

                    }
                 }
            </dl>
        </div>
        <div>
            <a asp-page="./Delete" asp-route-id="@Model.Complaint.Id" class="btn btn-danger">Delete</a>
            <a asp-page="./Index" class="btn btn-grey">Back</a>
        </div>

    </div>

