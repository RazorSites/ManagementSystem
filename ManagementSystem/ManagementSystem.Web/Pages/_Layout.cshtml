<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManagementSystem.Web</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/css/mdb.min.css" rel="stylesheet">
    <!--  Material Dashboard CSS    -->
    <link href="~/css/material-dashboard.css" rel="stylesheet" />
    <!-- Custom style -->
    <link href="~/css/style.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <!--Navbar-->
        <nav class="navbar navbar-expand-sm fixed-top">
            <div class="container">
                <a class="navbar-brand white-text mb-1 ml-1" asp-page="/Index">Quonets</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarToggler">
                    <ul class="navbar-nav mr-auto smooth-scroll">
                        @*<li class="nav-item">
                                <a class="nav-link" href="#home">
                                    Home
                                    <span class="sr-only">(current)</span>
                                </a>
                            </li>*@
                        @*<li class="nav-item">
                                <a class="nav-link" href="#about" data-offset="90">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#contact" data-offset="90">Contact</a>
                            </li>*@
                        @*<li class="nav-item">
                                <a class="nav-link" href="/blog" data-offset="90">Blog</a>
                            </li>*@
                    </ul>
                    <!-- Social Icon  -->
                    <ul class="navbar-nav nav-flex-icons">
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.facebook.com/nguyenlamlll" target="_blank">
                                <i class="fa fa-facebook light-green-text-2"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://twitter.com/LamLe_Raizes" target="_blank">
                                <i class="fa fa-twitter light-green-text-2"></i>
                            </a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link">
                                    <i class="fa fa-instagram light-green-text-2"></i>
                                </a>
                            </li>*@
                    </ul>
                    <ul class="navbar-nav nav-flex-icons">
                        <li class="nav-item">
                            <a class="nav-link"></a>
                            <!--Empty space for layout-->
                        </li>
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>

            </div>

        </nav>
    </header>

    <!--Sidebar-->
    <div class="wrapper">
        <div id="mySidebar" class="sidebar" data-color="purple" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

                Tip 2: you can also add an image using data-image tag
            -->
            <div class="logo">
                <a href="" class="simple-text logo-normal">
                    Management System
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item @(SidebarManager.GetClass(Page.Dashboard))">
                        <a class="nav-link" href="~/">
                            <i class="material-icons">dashboard</i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="nav-item @(SidebarManager.GetClass(Page.Personnel))">
                        <a class="nav-link" href="/HumanResource">
                            <i class="material-icons">person</i>
                            <p>Personnel</p>
                        </a>
                    </li>
                    <li class="nav-item @(SidebarManager.GetClass(Page.Finance))">
                        <a class="nav-link" href="/Finance">
                            <i class="material-icons">content_paste</i>
                            <p>Finance</p>
                        </a>
                    </li>
                    <li class="nav-item  @(SidebarManager.GetClass(Page.Product))">
                        <a class="nav-link" href="/Product">
                            <i class="material-icons">library_books</i>
                            <p>Product Management</p>
                        </a>
                    </li>
                    @*<li class="nav-item ">
                        <a class="nav-link" href="../examples/icons.html">
                            <i class="material-icons">bubble_chart</i>
                            <p>Icons</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="../examples/maps.html">
                            <i class="material-icons">location_ons</i>
                            <p>Maps</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="../examples/notifications.html">
                            <i class="material-icons">notifications</i>
                            <p>Notifications</p>
                        </a>
                    </li>
                    <li class="nav-item active-pro">
                        <a class="nav-link" href="../examples/upgrade.html">
                            <i class="material-icons">unarchive</i>
                            <p>Upgrade to PRO</p>
                        </a>
                    </li>*@
                </ul>
            </div>
        </div>
        <div class="main-panel">
            @RenderBody()
        </div>

    </div>

    <script>
        function w3_open() {
            document.getElementById("mySidebar").style.display = "block";
        }
        function w3_close() {
            document.getElementById("mySidebar").style.display = "none";
        }
    </script>
    <!--Sidebar-->

    <main role="main" style="padding-top:5em;">
        @RenderBody()
    </main>


    @*<footer class="fixed-footer font-small black white-text">
            <hr />
            <div class="container">
                <div class="d-flex justify-content-center mt-1 pb-1">
                    <a class="px-2 quonets-footer-link white-text" asp-page="/About">About</a>
                    <a class="px-2 quonets-footer-link white-text" asp-page="/Help">Help</a>
                    <a class="px-2 quonets-footer-link white-text" asp-page="/Sitemap">Sitemap</a>
                    <a class="px-2 quonets-footer-link white-text" asp-page="/Legal/Terms">Terms</a>
                    <p class="px-2" style="margin:0;">&copy; 2018 RazorSites.ManagementSystem</p>
                </div>
            </div>
        </footer>*@


    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="~/js/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/js/mdb.min.js"></script>

    <script src="~/js/material.min.js" type="text/javascript"></script>
    <!--  Charts Plugin -->
    <script src="~/js/chartist.min.js"></script>
    <!--  Dynamic Elements plugin -->
    <script src="~/js/arrive.min.js"></script>
    <!--  PerfectScrollbar Library -->
    <script src="~/js/perfect-scrollbar.jquery.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/js/bootstrap-notify.js"></script>
    <!--  Google Maps Plugin    -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
    <!-- Material Dashboard javascript methods -->
    <script src="~/js/material-dashboard.js?v=1.2.0"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
