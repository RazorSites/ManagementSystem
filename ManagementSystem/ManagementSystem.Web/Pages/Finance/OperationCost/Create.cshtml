@page
@model ManagementSystem.Web.Pages.Finance.OperationCost.CreateModel


@section Styles
    {
    <style>
        body {
            padding-top: 4em;
        }
    </style>
}

    <div class="container">
        <h2>New Transaction</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="OperationCost.Time" class="control-label"></label>
                        <input asp-for="OperationCost.Time" class="form-control" />
                        <span asp-validation-for="OperationCost.Time" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OperationCost.Reason" class="control-label"></label>
                        <input asp-for="OperationCost.Reason" class="form-control" />
                        <span asp-validation-for="OperationCost.Reason" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OperationCost.Amount" class="control-label"></label>
                        <input asp-for="OperationCost.Amount" class="form-control" />
                        <span asp-validation-for="OperationCost.Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
